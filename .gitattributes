# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python
*.pyw text diff=python
*.pyx text diff=python

# Jupyter notebooks
*.ipynb text eol=lf

# Configuration
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files (do not modify)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.tif binary
*.tiff binary
*.npy binary
*.npz binary
*.pkl binary
*.pickle binary
*.zip binary
*.gz binary
*.tar binary

# GeoTIFF and satellite data
*.jp2 binary
*.geotiff binary
